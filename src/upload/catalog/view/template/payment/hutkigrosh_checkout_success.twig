{{ header }}
<div id="common-success" class="container">
	{% if old_style %}
    <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
            <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
    </ul>
	{% else %}
	<div class="float-left">
		<ol class="breadcrumb">
			{% for breadcrumb in breadcrumbs %}
				<li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">
				{% if breadcrumb.text == "Shop" %}
				<i class="fas fa-home"></i>
				{% else %}
				{{ breadcrumb.text }}
				{% endif %}
				</a></li>
			{% endfor %}
		</ol>
	</div>
	{% endif %}

    <div class="row">
        {{ column_left }}
        {% if column_left and column_right %}
            {% set class = 'col-sm-6' %}
        {% elseif column_left or column_right %}
            {% set class = 'col-sm-9' %}
        {% else %}
            {% set class = 'col-sm-12' %}
        {% endif %}
        <div id="content" class="{{ class }}">
            {{ content_top }}
            {{ completionPanel.render() }}
            <br>
            <div id ="test">{{ buttonContinue }}</div>
            {{ content_bottom }}
        </div>
        {{ column_right }}
    </div>
</div>
{{ footer }}